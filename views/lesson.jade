extends layout

block content
  .container-fluid        
    .row
      h2.col-md-4.col-md-offset-4.text-center #{lesson.name}
    .row
      .col-md-4.col-md-offset-4.text-center #{lesson.descripion}      
    .row
      .col-md-4.col-md-offset-4.text-center
        .input-group
          .input-group-btn
            button.btn.btn-default.dropdown-toggle(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
              | Component 
              span.caret
            ul.dropdown-menu
              each component in components            
                li
                  a(href='#')                 
          input.form-control.dropdown-selection(type='text')    