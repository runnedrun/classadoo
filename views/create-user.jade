extends layout

block content
  .container-fluid
    .row.text-center
      h2.col-md-4.col-md-offset-4 Create new student account
    .row
      .col-md-4.col-md-offset-4.text-center
        form.login-form(action="/user" method="POST")
          .form-group
            label(for="name")
            input.form-control#name(name="name" type=text placeholder="Larry Example" maxLength="40")
          .form-group
            label(for="email")
            input.form-control#email(name="email" type=text placeholder="example@gmail.com" maxLength="40")
          .form-group
            label(for="password")
            input.form-control#password(name="password" type="password" placeholder="password" maxLength="24")  
          button.btn.btn-default(type="submit") Submit