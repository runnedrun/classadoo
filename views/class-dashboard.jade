extends layout

block style
	link(rel='stylesheet', href='/css/ClassDashboard.css') 
	link(rel='stylesheet', href='//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.3.0/styles/default.min.css')

block scripts
	script.
		var klass = {}
		klass.data = !{JSON.stringify(klass)}
	script(src="/js/build/ClassDashboard.js", type="text/javascript")
	script(src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.3.0/highlight.min.js" type="text/javascript")
block content	
	#pubnub(ssl="on")
	.container
		.row.flash-success
			.col-md-4.col-md-offset-4.text-center Action Successful!
		.row.flash-error
			.col-md-4.col-md-offset-4.text-center Action failed
	.container#class-info-container
	.container#class-controls
	.container#screenshot-display
	.container
		.row
			.col-md-8
				#student-state-wrapper
			.col-md-4
				#lesson-controls

