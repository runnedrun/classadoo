doctype html
html(lang='en')
  head
    title Scratchpad - Realtime HTML and CSS Editor
    link(href='/css/scratchpad.css', rel='stylesheet', type='text/css')
  body#scratchpad(tabindex='0')    
    #hidden-test-storage
    #commandbar
      a#menu.run-js-button(href='javascript:void(0)')
        span#menu-button JS
      a#title(href='javascript:void(0)') Loading...
    #toggle-sync-preview Show Preview      
    #sync-preview
    #editor
    //- #footer
    //-   | Powered by 
    //-   a#firebase(href='https://www.firebase.com/', target='_blank') Firebase
    #drag-handle
    iframe#sync-preview-preview
    iframe#preview
    #help
      h2 HTML & CSS Quick Reference
      dl
        dt Headings
        dd
          code <h1>, <h2>, <h3>, <h4>, <h5>, <h6>
        dt Link
        dd
          code <a href="http://google.com">Google<a>
    script.
      var Scratchpad = {document_id: "#{docId}"}
    script(src='/js/jquery-1.11.3.min.js', type='text/javascript')
    script(src='/js/webpack-files/firebase.min.js', type='text/javascript', charset='utf-8')
    script(src='/js/ace/ace.js', type='text/javascript', charset='utf-8')
    script(src='/js/ace/worker-html.js', type='text/javascript', charset='utf-8')    
    script(src='/js/underscore.js', type='text/javascript', charset='utf-8')
    script(src='/js/keymaster.js', type='text/javascript', charset='utf-8')
    script(src='/js/ScratchpadSyncPreview.js', type='text/javascript')
    script(src='/js/IframeManager.js', type='text/javascript')    
    script(src='/js/scratchpad.js', type='text/javascript')

