extends layout

block content
  .container-fluid        
    .row
      h2.col-md-4.col-md-offset-4.text-center Create a new window configuration
    .row
      .col-md-4.col-md-offset-4.text-center
        form.login-form(action="/window-configuration" method="POST")
          .form-group
            label(for="name") Name
            input.form-control#name(name="name" type="text" placeholder="Start of intro to JS lesson 1" maxLength="60")
          .form-group
            label(for="description") Description
            input.form-control#description(name="description" type="text")            
          button.btn.btn-default(type="submit") Submit    